/* 订单界面 */
.order-view {
  display: flex;
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  top: 246rpx;
  bottom: 120rpx;
}

.order-content {
  margin-top: 50rpx;
  /* padding-top: 50rpx; */
}

.order-list {
  border-top: 1rpx solid #eeeeee;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.order-less {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 15rpx 0;
}

