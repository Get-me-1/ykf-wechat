/* 底部按钮 */
.top-view {
  display: flex;
  /* background: linear-gradient(to bottom, #f7d45f, #f7d562, #f8d561, #f9db76, #f9de80); */
  height: 95rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  position: fixed;
  /* top: 0; */
  bottom: 0;
  right: 0;
  left: 0;
}

.top-view-flex {
  display: flex;
  align-items: center;
}

.top-view-flex view:nth-child(1) {
  padding-left: 36rpx;
}
.top-view-flex view:nth-child(2) {
  padding: 0 236rpx;
}
.top-view-flex view:nth-child(3) {
